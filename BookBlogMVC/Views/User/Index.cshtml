@model BookBlogMVC.Models.User
@{
    ViewBag.Title = "User";
}

<div class="jumbotron">
    <div class="container" style="text-align: center;">
        <div class="row">
            <div class="col-md-4">
                <img src="~/assets/blank-profile.png" alt="profile picture" style="width: 60%;"/>
            </div>
            <div class="col-md-8">
                <h2>Hello, @ViewBag.User.Username</h2>
                <p class="lead">User ID: @ViewBag.User.UserID</p>
                <p class="lead">Name: @ViewBag.User.FirstName @ViewBag.User.LastName</p>
                <p class="lead">Email: @ViewBag.User.Email</p>
                <form method="post" asp-controller="User" asp-action="Logout" class="form-horizontal">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Logout</button>
                </form>
            </div>
        </div>
    </div>
</div>